{
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "es2015.iterable",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}
